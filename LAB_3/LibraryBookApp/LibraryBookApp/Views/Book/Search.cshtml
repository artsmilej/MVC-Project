@model List<LibraryBookApp.Models.Book>
@{
    ViewData["Title"] = "Пошук книги";
}

<h2>Пошук книги</h2>

<form method="get" asp-action="Search">
    <input type="text" name="query" value="@ViewBag.Query" placeholder="Введіть назву або автора" />
    <button type="submit">Пошук</button>
</form>

@if (Model.Any())
{
    <h3>Результати:</h3>
    <table border="1" cellpadding="5">
        <tr>
            <th>Назва</th>
            <th>Автор</th>
            <th>Рік</th>
            <th>Видавництво</th>
        </tr>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td>@book.Publisher</td>
            </tr>
        }
    </table>
}
else if (ViewBag.Query != null)
{
    <p>Нічого не знайдено.</p>
}