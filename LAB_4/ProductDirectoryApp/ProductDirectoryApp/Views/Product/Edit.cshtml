@model ProductDirectoryApp.Models.Product
<h2>Редагувати товар</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirmId">Фірма</label>
        <select asp-for="FirmId" asp-items="ViewBag.FirmId" class="form-control"></select>
        <span asp-validation-for="FirmId" class="text-danger"></span>
    </div>
    <input type="submit" value="Зберегти" class="btn btn-success" />
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>