@model IEnumerable<ProductDirectoryApp.Models.Product>
<h2>Список товарів</h2>
<p><a asp-action="Create" class="btn btn-primary">Додати новий товар</a></p>
<table class="table">
    <thead><tr><th>Назва</th><th>Опис</th><th>Ціна</th><th>Фірма</th><th></th></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Firm?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>