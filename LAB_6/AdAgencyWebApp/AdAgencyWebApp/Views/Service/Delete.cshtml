@model Service
<h2 class="mb-3">Видалити послугу</h2>
<form asp-action="Delete" method="post" data-confirm-delete class="border rounded p-4 bg-light">
    <input type="hidden" asp-for="Id" />
    <p>Ви впевнені, що хочете видалити <strong>@Model.Name</strong>?</p>
    <button type="submit" class="btn btn-danger">Так, видалити</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Скасувати</a>
</form>